# ============================================================================
# PRODUCTION ENVIRONMENT VARIABLES для getsparks.ru
# ============================================================================
# Скопируйте этот файл как .env на сервере и заполните реальными значениями
# cp env.production.example .env
# nano .env

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_PATH=/root/sparks/data/sparks.db

# ============================================================================
# TELEGRAM BOT
# ============================================================================
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
APP_URL=https://getsparks.ru

# ============================================================================
# TON PAYMENT
# ============================================================================
# Адрес вашего TON кошелька для приема платежей
TON_WALLET_ADDRESS=your_ton_wallet_address_here

# TON API настройки
TON_API_URL=https://tonapi.io/v2
TON_API_KEY=your_ton_api_key_here
TON_NETWORK=mainnet
TON_SIMULATE_PAYMENTS=False
TON_MIN_AMOUNT_NANOTONS=100000000

# ============================================================================
# TRANSLATION API (опционально)
# ============================================================================
# Получите бесплатный API ключ на https://mymemory.translated.net/
# Можно оставить пустым - система будет работать бесплатно без ключа
MYMEMORY_API_KEY=

# ============================================================================
# DJANGO ADMIN
# ============================================================================
# Сгенерируйте безопасный секретный ключ:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your_django_secret_key_here_change_this_in_production
DEBUG=False

# ============================================================================
# FRONTEND
# ============================================================================
VITE_API_URL=https://getsparks.ru/api/v1

# ============================================================================
# TIMEZONE
# ============================================================================
TIMEZONE=Europe/Moscow

# ============================================================================
# API PREFIX (обычно не нужно менять)
# ============================================================================
API_V1_PREFIX=/api/v1

